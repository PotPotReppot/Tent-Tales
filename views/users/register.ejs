<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4">
                <img src="https://images.unsplash.com/photo-1510312305653-8ed496efae75?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D"
                alt="" class="card-img-top">
                <div class="card-body text-center">
                    <h3 class="card-title fw-bold">REGISTER</h3>
                    <form action="/register" class="validated-form" method="post">
                        <div class="mb-3">
                            <div>
                                <label class="form-label" for="username">Enter the Username</label>
                                <input class="form-control" type="text" id="username" for="username" name="username" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div>
                                <label class="form-label" for="password">Enter the Password</label>
                                <input class="form-control" type="password" id="password" for="password" name="password" required>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div>
                                <label class="form-label" for="email">Enter the Email</label>
                                <input class="form-control" type="email" id="email" for="email" name="email" required>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <br>
                            <button type="submit" class="btn btn-success w-100">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>